<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="SearchByNameBinding">
        <variable
            name="vm"
            type="com.example.alien.course04task02.ui.filmList.SearchByNameViewModel"
            />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_name_query"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_name_search"
            android:layout_toStartOf="@+id/btn_name_search"
            android:layout_margin="4dp"
            android:text="@{vm.searchByNameQuery}"
            android:onTextChanged="@{(text, start, before, count) -> vm.setSearchByNameQuery(text)}"/>

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:onClick="@{() -> vm.searchByName()}"
            android:id="@+id/btn_name_search"
            android:layout_margin="4dp"
            />
    </RelativeLayout>
</layout>
